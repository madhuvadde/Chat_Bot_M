{
   "name": "chat_bot_m",
   "module": "index.ts",
   "type": "module",
   "private": true,
   "scripts": {
      "dev": "bun run index.ts",
      "dev:client": "cd packages/client && bun run dev",
      "dev:server": "cd packages/server && bun run dev",
      "dev:both": "concurrently \"bun run dev:server\" \"bun run dev:client\"",
      "format": "prettier --write .",
      "prepare": "husky",
      "build": "cd packages/client && bun run build",
      "build:client": "cd packages/client && bun run build",
      "start": "cd packages/server && bun run start",
      "start:prod": "NODE_ENV=production cd packages/server && bun run start",
      "start:dev": "NODE_ENV=development cd packages/server && bun run start"
   },
   "devDependencies": {
      "@types/bun": "latest",
      "concurrently": "^9.2.1",
      "husky": "^9.1.7",
      "lint-staged": "^16.1.6",
      "prettier": "^3.6.2"
   },
   "peerDependencies": {
      "typescript": "^5"
   },
   "workspaces": [
      "packages/*"
   ]
}
